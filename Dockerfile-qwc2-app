FROM sourcepole/qwc-map-viewer-base:latest-2024-lts

ARG QWC2_URL
# Optional token for download with authorization
ARG AUTH_TOKEN

RUN wget -O /tmp/appbundle.zip --header="PRIVATE-TOKEN: $AUTH_TOKEN" "$QWC2_URL" && \
    cd /tmp && \
    unzip appbundle.zip && \
    cd prod && \
    mkdir /qwc2 && mv * /qwc2 && \
    mkdir /qwc2/data && \
    rm -rf appbundle.zip
